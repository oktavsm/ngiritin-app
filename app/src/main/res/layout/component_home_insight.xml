<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- insight section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardInsightContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F2F7FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- regional insight card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRegionalInsight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- header section -->
                    <ImageView
                        android:id="@+id/iconTarget"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/location_icon"
                        android:src="@drawable/ic_location"
                        app:tint="@color/blue_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvInsightTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/regional_insight"
                        android:textColor="@color/black_text"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/iconTarget"
                        app:layout_constraintTop_toTopOf="@id/iconTarget"
                        app:layout_constraintBottom_toBottomOf="@id/iconTarget" />

                    <!-- subtitle section -->
                    <TextView
                        android:id="@+id/tvInsightSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/average_spending_in_malang_area"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iconTarget" />

                    <!-- detail insight section -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_regional_insight_banner"
                        android:padding="12dp"
                        app:layout_constraintTop_toBottomOf="@id/tvInsightSubtitle">

                        <TextView
                            android:id="@+id/tvMonthlyAvgLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/monthly_average"
                            android:textColor="@color/gray_text"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvInsightAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/idr_2_6m_idr_3_2m"
                            android:textColor="@color/black_text"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvMonthlyAvgLabel" />

                        <TextView
                            android:id="@+id/tvInsightStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/you_re_spending_below_average"
                            android:textColor="@color/gray_text"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvInsightAmount" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- saving insight card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSavingGoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/bgSavingBanner"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="48dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/bg_saving_insight_banner"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <!-- text -->
                    <TextView
                        android:id="@+id/tvSavingText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="24dp"
                        android:layout_marginEnd="40dp"
                        android:text="@string/it_s_great_that_this_period_you_managed_to_save_20"
                        android:textColor="@color/gray_text"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/bgSavingBanner"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/bgSavingBanner"
                        app:layout_constraintTop_toTopOf="@id/bgSavingBanner" />

                    <!-- wrapper icon -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/iconBulbWrapper"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginVertical="12dp"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/blue_primary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/lightbulb_icon"
                            android:src="@drawable/ic_lightbulb"
                            app:tint="@color/white" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
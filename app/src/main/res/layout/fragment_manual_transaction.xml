<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="24dp">

    <!-- HEADER: Back Button & Title -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Back"
            android:textColor="#222222"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- SCROLLABLE FORM -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <!-- TAB SWITCHER (Income / Expense) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_tab_container"
                android:orientation="horizontal"
                android:padding="4dp">

                <!-- Tab Income -->
                <TextView
                    android:id="@+id/btnTabIncome"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_tab_active"
                    android:gravity="center"
                    android:text="Income"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <!-- Tab Expense -->
                <TextView
                    android:id="@+id/btnTabExpense"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="Expense"
                    android:textColor="#006FFD"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- FIELD 1: TOTAL -->
            <TextView
                style="@style/LabelInput"
                android:text="Total" />

            <LinearLayout
                style="@style/InputContainer">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp"
                    android:textStyle="bold"
                    android:textColor="#808080"
                    android:layout_marginEnd="12dp"/>
                <EditText
                    android:id="@+id/etAmount"
                    style="@style/EditTextClean"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <!-- FIELD 2: CATEGORY -->
            <TextView
                style="@style/LabelInput"
                android:text="Category" />

            <LinearLayout
                android:id="@+id/inputCategory"
                style="@style/InputContainer">
                <TextView
                    android:id="@+id/tvCategory"
                    style="@style/EditTextClean"
                    android:text="Select Category"
                    android:textColor="#808080"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_expand_more"
                    app:tint="#006FFD"/>
                <!-- Pastikan add vector asset: expand_more -->
            </LinearLayout>

            <!-- FIELD 3: DATE -->
            <TextView
                style="@style/LabelInput"
                android:text="Date" />

            <LinearLayout
                android:id="@+id/inputDate"
                style="@style/InputContainer">
                <TextView
                    android:id="@+id/tvDate"
                    style="@style/EditTextClean"
                    android:text="Select Date"
                    android:textColor="#808080"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_date_range"
                    app:tint="#006FFD"/>
                <!-- Pastikan add vector asset: date_range / calendar_today -->
            </LinearLayout>

            <!-- FIELD 4: SOURCE (Account) -->
            <TextView
                style="@style/LabelInput"
                android:text="Source" />

            <LinearLayout
                android:id="@+id/inputSource"
                style="@style/InputContainer">
                <TextView
                    android:id="@+id/tvSource"
                    style="@style/EditTextClean"
                    android:text="Select Source"
                    android:textColor="#808080"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_account_balance"
                    app:tint="#006FFD"/>
                <!-- Pastikan add vector asset: account_balance -->
            </LinearLayout>

            <!-- FIELD 5: NOTE -->
            <TextView
                style="@style/LabelInput"
                android:text="Note" />

            <LinearLayout
                style="@style/InputContainer">
                <EditText
                    android:id="@+id/etNote"
                    style="@style/EditTextClean"
                    android:hint="Kirim untuk kebutuhan makan..."
                    android:textColorHint="#A0AEC0"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <!-- SAVE BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="#006FFD"
                android:textColor="@color/white"
                android:text="Save Transaction"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"/>

        <!-- MENU 1: MANAGE CATEGORIES (EXPANDABLE) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_settings_menu"
            android:layout_marginBottom="12dp"
            android:animateLayoutChanges="true">

            <!-- HEADER (YANG DIKLIK) -->
            <LinearLayout
                android:id="@+id/btnManageCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings_edit"
                    app:tint="#333333"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Manage Categories"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <!-- Panah yang nanti bakal muter -->
                <ImageView
                    android:id="@+id/ivArrowCategories"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="#007AFF"/>
            </LinearLayout>

            <!-- ISI RAHASIA (EXPANDED VIEW) -->
            <LinearLayout
                android:id="@+id/layoutCategoriesExpanded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:visibility="gone"> <!-- Default GONE biar ngumpet -->

                <!-- List Category 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_item_category"
                        android:paddingStart="12dp"
                        android:text="Food"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginEnd="8dp"/>

                    <!-- Icon Edit Hijau (Update: ic_edit_green) -->
                    <!-- Hapus tint karena gambarnya udah ijo -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_edit_green"
                        android:background="#E8F5E9"
                        android:padding="6dp"
                        android:layout_marginEnd="4dp"/>

                    <!-- Icon Cancel Merah (Update: ic_cancel_red) -->
                    <!-- Hapus tint & rotation karena gambarnya udah merah & bentuk silang -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_cancel_red"
                        android:background="#FFEBEE"
                        android:padding="6dp"/>
                </LinearLayout>

                <!-- List Category 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_item_category"
                        android:paddingStart="12dp"
                        android:text="Fotocopy"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginEnd="8dp"/>

                    <!-- Icon Edit Hijau -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_edit_green"
                        android:background="#E8F5E9"
                        android:padding="6dp"
                        android:layout_marginEnd="4dp"/>

                    <!-- Icon Cancel Merah -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_cancel_red"
                        android:background="#FFEBEE"
                        android:padding="6dp"/>
                </LinearLayout>

                <!-- Tombol Add + -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_btn_add_category"
                    android:text="Add +"
                    android:textColor="#007AFF"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="24dp"/>

                <!-- Tombol Cancel & Save -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCancelCategory"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="#007AFF"
                        android:layout_marginEnd="8dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSaveCategory"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:text="Save Change"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_btn_save_settings"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <!-- MENU 2: MANAGE ACCOUNTS & WALLETS -->
        <LinearLayout
            android:id="@+id/btnManageWallets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_settings_menu"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_wallet"
                app:tint="#333333"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Manage Accounts &amp; Wallets"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="#007AFF"/>
        </LinearLayout>

        <!-- CARD 1: REMINDER NOTIFICATION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_settings_menu"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <!-- Card Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notif"
                    app:tint="#333333"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminder Notification"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When I want to be reminded to enter my daily transactions. (24 Hours format)"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>

            <!-- Input Time Box -->
            <EditText
                android:id="@+id/etReminderTime"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_input_border_blue"
                android:gravity="center"
                android:hint="XX : XX"
                android:inputType="datetime"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSaveReminder"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_btn_save_settings"
                android:text="Save Settings"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- CARD 2: WARNING NOTIFICATION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_settings_menu"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <!-- Card Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_warning"
                    app:tint="#333333"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Warning Notification"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notify me when expenses reach a certain percentage of the budget (default: 80%)."
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>

            <!-- Input Percentage Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limit"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginEnd="12dp"/>

                <EditText
                    android:id="@+id/etLimitPercent"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_border_blue"
                    android:gravity="center"
                    android:text="80"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#666666"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSaveWarning"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_btn_save_settings"
                android:text="Save Settings"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
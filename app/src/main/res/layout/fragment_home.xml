<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="100dp">

        <!-- header component -->
        <include
            android:id="@+id/componentHeader"
            layout="@layout/component_home_header" />

        <!-- insight component -->
        <include
            android:id="@+id/componentInsight"
            layout="@layout/component_home_insight" />

        <!-- transactions component -->
        <include
            android:id="@+id/componentTransactions"
            layout="@layout/component_home_transactions" />

    </LinearLayout>
</ScrollView>
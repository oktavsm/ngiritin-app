<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="100dp">
    <!-- paddingBottom besar agar tidak tertutup navbar jika ada -->

    <!-- HEADER: Back Button -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- INPUT CONTAINER (Kotak Besar Biru Muda dengan Border) -->
    <!-- Menggunakan MaterialCardView untuk support Stroke/Border -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardInputContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="48dp"
        app:cardBackgroundColor="#EAF2FF"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:strokeColor="#006FFD"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveTransaction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <EditText
            android:id="@+id/etAiInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="top|start"
            android:hint="Just write anything about today's\ntransaction, I got you..."
            android:textColorHint="#A0AEC0"
            android:textColor="#222222"
            android:textSize="16sp"
            android:padding="24dp"
            android:inputType="textMultiLine"
            android:scrollbars="vertical" />

    </com.google.android.material.card.MaterialCardView>

    <!-- MICROPHONE BUTTON (Floating) -->
    <!-- Trik Posisi: Top ke Bottom Card, Bottom ke Bottom Card -->
    <!-- Ini membuat tombol berada tepat di garis batas bawah card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnMic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:cardBackgroundColor="#006FFD"
        app:cardCornerRadius="32dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardInputContainer"
        app:layout_constraintEnd_toEndOf="@+id/cardInputContainer"
        app:layout_constraintStart_toStartOf="@+id/cardInputContainer"
        app:layout_constraintTop_toBottomOf="@+id/cardInputContainer">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_microphone"
            app:tint="@color/white" />

    </androidx.cardview.widget.CardView>

    <!-- SAVE BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveTransaction"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="#006FFD"
        android:textColor="@color/white"
        android:text="Save Transaction"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>